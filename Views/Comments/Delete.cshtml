@model WebProject.Models.Comment

@{
    ViewData["Title"] = "刪除留言";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> 刪除留言確認
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model == null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <strong>無效的留言</strong> - 該留言不存在或已被刪除。
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>警告！</strong> 此操作無法撤銷，留言將被永久刪除。
                        </div>

                        <div class="mb-4">
                            <h5 class="fw-bold text-dark mb-3">留言詳情</h5>
                            
                            <dl class="row">
                                <dt class="col-sm-3 fw-bold">留言者</dt>
                                <dd class="col-sm-9">
                                    @if (Model.User != null)
                                    {
                                        <span class="badge bg-primary">@Model.User.Username</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">未知用戶</span>
                                    }
                                </dd>

                                <dt class="col-sm-3 fw-bold">發布時間</dt>
                                <dd class="col-sm-9">
                                    @Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")
                                </dd>

                                <dt class="col-sm-3 fw-bold">所屬文章</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Post != null)
                                    {
                                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Post.PostId" class="text-decoration-none">
                                            @Model.Post.Title
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">文章已刪除</span>
                                    }
                                </dd>

                                @if (Model.ParentId.HasValue && Model.Parent != null)
                                {
                                    <dt class="col-sm-3 fw-bold">回覆對象</dt>
                                    <dd class="col-sm-9">
                                        @if (Model.Parent.User != null)
                                        {
                                            <span>回覆給 <strong>@Model.Parent.User.Username</strong></span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">原留言已刪除</span>
                                        }
                                    </dd>
                                }

                                <dt class="col-sm-3 fw-bold">狀態</dt>
                                <dd class="col-sm-9">
                                    @if (Model.IsDeleted == true)
                                    {
                                        <span class="badge bg-danger">已刪除</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">正常</span>
                                    }
                                </dd>
                            </dl>

                            <hr />

                            <div class="mt-3">
                                <h6 class="fw-bold mb-2">留言內容</h6>
                                <div class="p-3 bg-light rounded border-start border-5 border-danger">
                                    @if (string.IsNullOrWhiteSpace(Model.Content))
                                    {
                                        <span class="text-muted">無內容</span>
                                    }
                                    else
                                    {
                                        @Html.Raw(Model.Content.Replace("\n", "<br />"))
                                    }
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> 返回列表
                            </a>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" asp-for="CommentId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('此操作無法撤銷，確定要刪除此留言嗎？');">
                                    <i class="bi bi-trash"></i> 確認刪除
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
