@model IEnumerable<WebProject.Models.Comment>

@{
    ViewData["Title"] = "留言管理";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0"><i class="bi bi-chat-left-text"></i> 留言管理列表</h2>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th style="width: 30%">留言內容</th>
                    <th style="width: 15%">文章標題</th>
                    <th>發布者</th>
                    <th>類型</th>
                    <th>發布時間</th>
                    <th>狀態</th>
                    <th class="text-end">管理功能</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span title="@item.Content">
                                @(item.Content.Length > 20 ? item.Content.Substring(0, 20) + "..." : item.Content)
                            </span>
                        </td>

                        <td>
                            @if (item.Post != null)
                            {
                                <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.PostId" class="text-decoration-none fw-bold" target="_blank">
                                    @if (item.Post.Title.Length > 10)
                                    {
                                        @item.Post.Title.Substring(0, 10)
                            
                                        <text>...</text>
                                    }
                                    else
                                    {
                                        @item.Post.Title
                                    }
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">文章已刪除</span>
                            }
                        </td>

                        <td>
                            <span class="badge bg-light text-dark border">
                                <i class="bi bi-person"></i> @(item.User?.Username ?? "未知用戶")
                            </span>
                        </td>

                        <td>
                            @if (item.ParentId == null)
                            {
                                <span class="badge bg-primary">主留言</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark" title="父留言 ID: @item.ParentId">
                                    <i class="bi bi-arrow-return-right"></i> 回覆
                                </span>
                            }
                        </td>

                        <td class="small text-muted">
                            @item.CreatedAt?.ToString("yyyy-MM-dd HH:mm")
                        </td>

                        <td>
                            @if (item.IsDeleted == true)
                            {
                                <span class="badge bg-danger">已刪除</span>
                            }
                            else
                            {
                                <span class="badge bg-success">正常</span>
                            }
                        </td>

                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                @* <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-outline-primary" title="編輯">
                                    編輯
                                </a> *@
                                <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-outline-secondary" title="詳情">
                                    詳情
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-outline-danger" title="刪除">
                                    刪除
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-3">
        目前沒有任何留言資料。
    </div>
}