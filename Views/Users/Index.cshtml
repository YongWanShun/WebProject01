@model IEnumerable<WebProject.Models.User>

@{
    ViewData["Title"] = "用戶管理";
}

<h1>用戶列表</h1>

@if (User.IsInRole("admin") || true)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">新增用戶</a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Username)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>

                <th>狀態 (IsActive)</th>

                <th>管理功能</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @if (item.Role == "admin")
                        {
                            <span class="badge bg-danger">管理員</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">一般會員</span>
                        }
                    </td>

                    <td>
                        @if (item.IsActive == true)
                        {
                            <span class="text-success fw-bold">啟用中</span>
                        }
                        else
                        {
                            <span class="text-muted text-decoration-line-through">已停用</span>
                        }
                    </td>

                    
                    <td>
                        @if (item.IsActive == true)
                        {
                            <a asp-action="ToggleActive" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-danger">
                                停用
                            </a>
                        }
                        else
                        {
                            <a asp-action="ToggleActive" asp-route-id="@item.UserId" class="btn btn-sm btn-success">
                                啟用
                            </a>
                        }

                        <span>|</span>

                        <a asp-action="Edit" asp-route-id="@item.UserId">編輯</a> |
                        <a asp-action="Details" asp-route-id="@item.UserId">詳情</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


