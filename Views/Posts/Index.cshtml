@model IEnumerable<WebProject.Models.Post>

@{
    ViewData["Title"] = "管理文章";
}

<h1>文章列表</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增文章</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>標題</th>
            <th>作者</th>
            <th>分類</th>
            <th>發布時間</th>
            <th>瀏覽數</th>
            <th>回覆數</th>
            <th>管理功能</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@(item.User?.Username ?? "未知")</td>
                <td>
                    @if (item.Category != null)
                    {
                        <span class="badge bg-secondary">@item.Category.Name</span>
                    }
                    else
                    {
                        <span class="text-muted">無分類</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>@Html.DisplayFor(modelItem => item.ViewCount)</td>
                <td>@(item.Comments != null ? item.Comments.Count(c => c.IsDeleted != true) : 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PostId">編輯</a> |
                    <a asp-action="Details" asp-route-id="@item.PostId">詳情</a> |
                    <a asp-action="Delete" asp-route-id="@item.PostId">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>