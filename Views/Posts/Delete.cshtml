@model WebProject.Models.Post

@{
    ViewData["Title"] = "刪除文章";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> 刪除文章確認
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong>警告！</strong> 此操作無法撤銷，文章將被永久刪除。
                    </div>

                    <div class="mb-4">
                        <h5 class="fw-bold text-dark mb-3">文章詳情</h5>
                        
                        <dl class="row">
                            <dt class="col-sm-3 fw-bold">標題</dt>
                            <dd class="col-sm-9">@Model.Title</dd>

                            <dt class="col-sm-3 fw-bold">分類</dt>
                            <dd class="col-sm-9">
                                @if (Model.Category != null)
                                {
                                    <span class="badge bg-secondary">@Model.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">未分類</span>
                                }
                            </dd>

                            <dt class="col-sm-3 fw-bold">作者</dt>
                            <dd class="col-sm-9">@(Model.User?.Username ?? "未知")</dd>

                            <dt class="col-sm-3 fw-bold">發布時間</dt>
                            <dd class="col-sm-9">@Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>

                            <dt class="col-sm-3 fw-bold">最後修改</dt>
                            <dd class="col-sm-9">@Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm")</dd>

                            <dt class="col-sm-3 fw-bold">瀏覽次數</dt>
                            <dd class="col-sm-9">@(Model.ViewCount ?? 0) 次</dd>

                            @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                            {
                                <dt class="col-sm-3 fw-bold">封面圖</dt>
                                <dd class="col-sm-9">
                                    <img src="@Model.ThumbnailUrl" alt="縮圖" class="img-thumbnail" style="max-height: 150px;" />
                                </dd>
                            }
                        </dl>

                        <div class="mt-3 p-3 bg-light rounded">
                            <h6 class="fw-bold mb-2">文章內容預覽</h6>
                            <div class="text-muted small" style="max-height: 200px; overflow-y: auto;">
                                @Html.Raw(Model.Content?.Replace("\n", "<br />"))
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> 返回列表
                        </a>
                        <form asp-action="Delete" method="post" style="display: inline;">
                            <input type="hidden" asp-for="PostId" />
                            <button type="submit" class="btn btn-danger" onclick="return confirm('此操作無法撤銷，確定要刪除此文章嗎？');">
                                <i class="bi bi-trash"></i> 確認刪除
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
