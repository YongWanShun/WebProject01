            <vc:categories />
            
            <div class="card">
                <div class="card-header fw-semibold">
                    管理區
                </div>
                <div class="card-body">
                    <a href="/Admin/Posts" class="btn btn-sm btn-outline-danger w-100 mb-2">
                        管理文章 / 刪文
                    </a>
                    <a href="/Admin/Categories" class="btn btn-sm btn-outline-secondary w-100">
                        管理分類
                    </a>
                </div>
            </div>
        </aside>



        <main class="col-lg-9">

            <form method="get" asp-action="Index" class="mb-4">
                <div class="input-group">
                    <input type="text" name="search" class="form-control"
                           placeholder="搜尋文章..."
                           value="@ViewData["CurrentSearch"]"> @if (Model.CurrentCategoryId != null)
                    {
                        <input type="hidden" name="categoryId" value="@Model.CurrentCategoryId" />
                    }

                    <button class="btn btn-primary" type="submit">搜尋</button>

                    @if (ViewData["CurrentSearch"] != null)
                    {
                        <a asp-action="Index" asp-route-categoryId="@Model.CurrentCategoryId" class="btn btn-outline-secondary">清除</a>
                    }
                </div>
            </form>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h4 mb-0">文章列表</h2>
                <a href="/Posts/Create" class="btn btn-success">
                    新增文章
                </a>
            </div>

            

            @foreach (var post in Model.Posts)
            {
                <article class="card mb-3">
                    <div class="card-body">
                        <h3 class="h5 card-title mb-1">
                            <a href="/Posts/Details/@post.PostId" class="text-decoration-none">
                                @post.Title
                            </a>
                        </h3>
                        <div class="small text-muted mb-2">
                            作者：@(post.User?.Username ?? "未知") ｜ 發布時間：@post.CreatedAt?.ToString("yyyy-MM-dd HH:mm") ｜ 分類：@post.Category?.Name
                        </div>
                        <p class="card-text">

                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="small text-muted">
                                回覆數：@post.Comments.Count(c => c.IsDeleted != true) ｜ 瀏覽：@post.ViewCount
                            </div>
                            <a href="/Posts/Details/@post.PostId" class="btn btn-sm btn-outline-primary">
                                查看詳細
                            </a>
                        </div>
                    </div>
                </article>
            }
            

            <nav aria-label="文章分頁">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(Model.CurrentPage - 1)">上一頁</a>
                    </li>                  
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-categoryId="@Model.CurrentCategoryId"
                               asp-route-search="@ViewData["CurrentSearch"]">
                                @i
                            </a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(Model.CurrentPage + 1)">下一頁</a>
                    </li>
                </ul>
            </nav>
        </main>
    </div>
</div>

