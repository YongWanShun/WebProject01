@model IEnumerable<WebProject.Models.Category>

@{
    ViewData["Title"] = "管理分類";
}

<h1>分類列表</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增分類</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>分類名稱</th>
            <th>描述</th>
            <th>建立時間</th>
            <th>文章數量</th>
            <th>管理功能</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @if (string.IsNullOrEmpty(item.Description))
                    {
                        <span class="text-muted">無描述</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Description)
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td>
                    <span class="badge bg-secondary">
                        @(item.Posts != null ? item.Posts.Count : 0) 篇
                    </span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">編輯</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">詳情</a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>