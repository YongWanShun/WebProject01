@model WebProject.Models.Category

@{
    ViewData["Title"] = "刪除分類";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> 刪除分類確認
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model == null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <strong>無效的分類</strong> - 該分類不存在。
                        </div>
                        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>警告！</strong> 此操作無法撤銷，分類將被永久刪除。
                            @if (Model.Posts != null && Model.Posts.Count > 0)
                            {
                                <div class="mt-2">
                                    <strong>注意：</strong>此分類下有 <span class="badge bg-warning text-dark">@Model.Posts.Count</span> 篇文章，刪除分類後，相關文章的分類將被清除。
                                </div>
                            }
                        </div>

                        <div class="mb-4">
                            <h5 class="fw-bold text-dark mb-3">分類詳情</h5>
                            
                            <dl class="row">
                                <dt class="col-sm-3 fw-bold">分類名稱</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-primary fs-6">@Model.Name</span>
                                </dd>

                                <dt class="col-sm-3 fw-bold">描述</dt>
                                <dd class="col-sm-9">
                                    @if (string.IsNullOrWhiteSpace(Model.Description))
                                    {
                                        <span class="text-muted">無描述</span>
                                    }
                                    else
                                    {
                                        @Model.Description
                                    }
                                </dd>

                                <dt class="col-sm-3 fw-bold">建立時間</dt>
                                <dd class="col-sm-9">
                                    @Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")
                                </dd>

                                <dt class="col-sm-3 fw-bold">文章數量</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-info">@(Model.Posts?.Count ?? 0) 篇</span>
                                </dd>
                            </dl>

                            @if (Model.Posts != null && Model.Posts.Count > 0)
                            {
                                <hr />
                                <div class="mt-3">
                                    <h6 class="fw-bold mb-2">此分類下的文章</h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>文章標題</th>
                                                    <th>作者</th>
                                                    <th>發布時間</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var post in Model.Posts.Take(5))
                                                {
                                                    <tr>
                                                        <td>
                                                            <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.PostId" class="text-decoration-none">
                                                                @post.Title
                                                            </a>
                                                        </td>
                                                        <td>@(post.User?.Username ?? "未知")</td>
                                                        <td>@post.CreatedAt?.ToString("yyyy-MM-dd")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        @if (Model.Posts.Count > 5)
                                        {
                                            <small class="text-muted">... 還有 @(Model.Posts.Count - 5) 篇文章</small>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <hr />

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> 返回列表
                            </a>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" asp-for="CategoryId" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('此操作無法撤銷，確定要刪除此分類嗎？');">
                                    <i class="bi bi-trash"></i> 確認刪除
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
